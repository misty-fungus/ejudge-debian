#!/bin/sh -e

# Source debconf library.
. /usr/share/debconf/confmodule

# Do you like debian?
db_input high ejudge/like_debian || true
db_go

# Check their answer.
db_get ejudge/like_debian
if [ "$RET" = "false" ]; then
    # Poor misguided one..
    db_input high ejudge/why_debian_is_great || true
    db_go
fi

exit 0

db_input low ejudge/username || true
db_go

db_input low ejudge/groupname || true
db_go

db_input low ejudge/directory || true
db_go

db_stop
